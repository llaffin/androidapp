<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@drawable/appbackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="85dp"
            android:layout_height="70dp"
            tools:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <TextView
            android:id="@+id/myTimeStamp"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/myImageView"
            android:layout_marginTop="0dp"
            android:text="Time Stamp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/postBox"
            android:layout_width="202dp"
            android:layout_height="84dp"
            android:layout_toEndOf="@id/myImageView"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/deletePostBtn"
            android:layout_width="87dp"
            android:layout_height="80dp"
            android:layout_marginStart="-1dp"
            android:layout_toEndOf="@id/postBox"
            android:text="Delete Post"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/postID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>