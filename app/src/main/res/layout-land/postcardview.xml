<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@drawable/appbackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/friendImageView"
            android:layout_width="85dp"
            android:layout_height="70dp"
            tools:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <TextView
            android:id="@+id/friendNameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friendImageView"
            android:text="Friend's Name"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/postView"
            android:layout_width="303dp"
            android:layout_height="66dp"
            android:layout_toEndOf="@id/friendImageView"
            android:text="Friend's Post"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="93dp"
            android:layout_height="17dp"
            android:layout_below="@+id/postView"
            android:layout_alignEnd="@+id/friendImageView"
            android:layout_alignBottom="@+id/postView"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-107dp"
            android:layout_marginBottom="-20dp"
            android:layout_toEndOf="@+id/friendNameBox"
            android:text="TimeStamp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>